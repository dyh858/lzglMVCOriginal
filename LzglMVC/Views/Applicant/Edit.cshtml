@model Models.Applicant

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/HRMLayout.cshtml";
}
<div>
    <div>
        <div class="container" id="add">
            @{
                <form action="/Applicant/Modify" method="post">
                    <div class="row">
                        <div class="col-sm-12 col-md-6 left">记录号：</div>
                        <div class="col-sm-12 col-md-6">
                            <input type="text" name="aid" readonly="true" value="@Model.AId" class="form-control"/></div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-6 left">姓名：</div>
                        <div class="col-sm-12 col-md-6">
                            <input type="text" name="aname" value="@Model.AName" class="form-control"/></div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-6 left">性别：</div>
                        <div class="col-sm-12 col-md-6">
                            <label class="radio-inline">
                                <input type="radio" name="gender" checked="@Model.Gender.Equals(1)" value="1"/>男</label>
                            <label class="radio-inline">
                                <input type="radio" name="gender" checked="@Model.Gender.Equals(0)" value="0"/>女</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-6 left">民族：</div>
                        <div class="col-sm-12 col-md-6">
                            <input type="text" name="nationality" value="@Model.Nationality" class="form-control"/></div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-6 left">出生日期：</div>
                        <div class="col-sm-12 col-md-6">
                            <input type="text" name="birthdate" value="@Model.Birthdate" class="form-control"/></div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-6 left">身份证号码：</div>
                        <div class="col-sm-12 col-md-6">
                            <input type="text" name="idcard" value="@Model.IdCard" class="form-control"></div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-6 left">住址：</div>
                        <div class="col-sm-12 col-md-6">
                            <input type="text" name="address" value="@Model.Address" class="form-control"/></div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-6 left">电话号码：</div>
                        <div class="col-sm-12 col-md-6">
                            <input type="text" name="mobilephone" value="@Model.Mobilephone" class="form-control"/></div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-6 left">学历：</div>
                        <div class="col-sm-12 col-md-6">
                            <input type="text" name="education" value="@Model.Education" class="form-control"/></div>
                    </div>
                    <div class="row">
                        <div>
                            <input type="submit" value="提交" class="btn btn-primary" /></div>
                    </div>
                </form>    
            }
        </div>
        <div>@ViewData["result"]</div>
    </div>
</div>
