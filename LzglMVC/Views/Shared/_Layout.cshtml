@using Models;    
@{
    SysAdmin admin= (SysAdmin)Session["CurrentAdmin"];
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <!--@Styles.Render("~/Content/bootstrap/css")该语句不能显示-->
    <link href="~/Content/bootstrap/bootstrap.min.css" rel="stylesheet" />
    @Styles.Render("~/Content/layout/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a href="@Url.Action("Index","Home",new{})" class="navbar-brand"></a>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
				    <span class="icon-bar"></span>
				    <span class="icon-bar"></span>
				    <span class="icon-bar"></span>
			    </button>
            </div>
            <div class="collapse navbar-collapse" id="navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#">首页</a></li>
                    <li><a href="#">国际</a></li>
                    <li><a href="#">国内</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@(admin != null ? "~/SysAdmin/Destroy" : "~/SysAdmin/Index")">@(admin != null ? "已登录" : "登录")</a></li>
                    <li><a href="@Url.Action("Signup","SysAdmin",new{})">注册</a></li>
                </ul>
            </div>
        </div>
    </div>

    @RenderBody()
            
    <div class="footer">
        联系我们｜www.858.com All Right Reserve 版权所有
    </div>


</body>
</html>
