@model Models.RBAC.Actions

@{
    ViewBag.Title = "Browse";
    Layout = "~/Views/Shared/HRMLayout.cshtml";
}
<div class="container" style="margin-top: 60px;">
    <div class="col-sm-2">
        @Html.Action("PartialRight", "Right")
    </div>
    <div class="col-sm-10">
        <table class="table table-hover table-bordered">
            <tr>
                <th>记录号</th>
                <th>权限名称</th>
                <th>Url</th>
                <th colspan="2">操作</th>
            </tr>
            @{
                if (ViewBag.List != null)
                {
                    foreach (Models.RBAC.Actions vo in ViewBag.List)
                    {
                <tr>
                    <td>@vo.Actid</td>
                    <td>@vo.Title</td>
                    <td>@vo.Url</td>
                    <td>@Html.ActionLink("删除", "Delete", "Actions", new { id = vo.Actid }, new { })</td>
                    <td>@Html.ActionLink("修改", "Edit", "Actions", new { id = vo.Actid }, new { target = "_blank" })</td>
                </tr>
                    }
                }   
            }
        </table>
    </div>
</div>