@model Models.Applicant

@{
    ViewBag.Title = "Browse";
    Layout = "~/Views/Shared/HRMLayout.cshtml";
}
<div class="container">
    <table class="table table-hover table-bordered">
        <tr>
            <th>记录号</th>
            <th>姓名</th>
            <th>性别</th>
            <th>出生日期</th>
            <th>身份证</th>
            <th>民族</th>
            <th>电话号码</th>
            <th>住址</th>
            <th colspan="2">操作</th>
        </tr>
        @{
            if (ViewBag.List != null)
            {
                foreach (Models.Applicant vo in ViewBag.List)
                {
            <tr>
                <td>@vo.AId</td>
                <td>
                    <a target="_blank" href="@Url.Action("Show", "Applicant", new { aid = vo.AId })">@vo.AName</a>
                </td>
                <td>@vo.dispGender()</td>
                <td>@vo.Birthdate</td>
                <td>@vo.IdCard</td>
                <td>@vo.Nationality</td>
                <td>@vo.Mobilephone</td>
                <td>@vo.Address</td>
                <td>@Html.ActionLink("删除", "Delete", "Applicant", new { aid = vo.AId }, new { })</td>
                <td>@Html.ActionLink("修改", "Edit", "Applicant", new { aid = vo.AId }, new { target = "_blank" })</td>
            </tr>
                }
            }   
        }
    </table>
</div>
