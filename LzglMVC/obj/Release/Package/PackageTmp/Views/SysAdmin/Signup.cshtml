@model Models.SysAdmin

@{
    ViewBag.Title = "Signup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/custom/admin-login.css" rel="stylesheet" />
<div class="container container-small render">
    <h1>注册
        <small>已有账号？<a href="@Url.Action("Index","SysAdmin",new{})">登录</a></small>
    </h1>
    <form action="SysAdmin/AdminLogin" method="post">
        <div class="form-group">
            <label>用户名：</label>
            <input type="text" class="form-control" name="LoginId"/>
        </div>
        <div class="form-group">
            <label>验证码：</label>
            <div class="input-group">
                <input type="text" class="form-control" name="LoginId"/>
                <div class="input-group-btn">
                    <div class="btn btn-default">获取验证码</div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label>密码：</label>
            <input type="text" class="form-control" name="LoginPwd"/>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary btn-block" value="注册"/>
        </div>
        <div class="form-group">
            注册即代表你同意<a href="#">服务条款</a>
        </div>
    </form>
</div>
