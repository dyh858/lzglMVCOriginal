@model Models.RBAC.Groups

@{
    ViewBag.Title = "Browse";
    Layout = "~/Views/Shared/HRMLayout.cshtml";
}
<div class="container" style="margin-top: 60px;">
    <div class="col-sm-2">
        @Html.Action("PartialRight", "Right")
    </div>
    <div class="col-sm-10">
        <table class="table table-hover table-bordered">
            <tr>
                <th>记录号</th>
                <th>权限组名称</th>
                <th>描述</th>
                <th colspan="2">操作</th>
            </tr>
            @{
                if (ViewBag.List != null)
                {
                    foreach (Models.RBAC.Groups vo in ViewBag.List)
                    {
                <tr>
                    <td>@vo.Gid</td>
                    <td>@vo.Title</td>
                    <td>@vo.Note</td>
                    <td>@Html.ActionLink("删除", "Delete", "Groups", new { id = vo.Gid }, new { })</td>
                    <td>@Html.ActionLink("修改", "Edit", "Groups", new { id = vo.Gid }, new { target = "_blank" })</td>
                </tr>
                    }
                }   
            }
        </table>
    </div>
</div>
