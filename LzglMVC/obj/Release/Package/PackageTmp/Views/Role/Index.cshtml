@model Models.RBAC.Role

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/HRMLayout.cshtml";
}
<link href="~/Content/custom/add.css" rel="stylesheet" />
<script src="~/Scripts/add.js"></script>
<div class="container" style="margin-top:60px;">
    <div class="col-sm-2">
        @Html.Action("PartialRight","Right")
    </div>
    <div class="col-sm-10">
        <div id="add">
            <div class="container">
                <form action="/Role/Add" method="post">
                    <h3>增加角色</h3>
                    <div class="form-row clearfix clearfix">
                        <div class="col-sm-3">
                            <label class="left">角色名称：</label>
                        </div>
                        <div class="col-sm-9">
                            <input type="text" name="Title" class="form-control" value="@(Model != null ? Model.Title : "")"/><p class="err">@Html.ValidationMessage("Title")</p>
                        </div>
                    </div>
                    <div class="form-row clearfix clearfix">
                        <div class="col-sm-3">
                            <label class="left">描述：</label>
                        </div>
                        <div class="col-sm-9">
                            <input type="text" name="Note" class="form-control" value="@(Model != null ? Model.Note : "")"/>
                        </div>
                    </div>
                    <div class="form-row clearfix">
                        <div class="col-sm-3"></div>
                        <div class="col-sm-9">
                            <input type="submit" value="提交" class="btn btn-primary btn-block" />
                        </div>
                    </div>
                </form>
                <div>@ViewData["result"]</div>
            </div>
        </div>
    </div>
</div>

