@model Models.RBAC.Role
@{
    ViewBag.Title = "Browse";
    Layout = "~/Views/Shared/HRMLayout.cshtml";
}
<div class="container" style="margin-top: 60px;">
    <div class="col-sm-2">
        @Html.Action("PartialRight", "Right")
    </div>
    <div class="col-sm-10">
        <table class="table table-hover table-bordered">
            <tr>
                <th>记录号</th>
                <th>角色名称</th>
                <th>描述</th>
                <th colspan="2">操作</th>
            </tr>
            @{
                if (ViewBag.List != null)
                {
                    foreach (Models.RBAC.Role vo in ViewBag.List)
                    {
                <tr>
                    <td>@vo.Rid</td>
                    <td>
                        <a target="_blank" href="@Url.Action("Show", "Role", new { id = vo.Rid })">@vo.Title</a>
                    </td>
                    <td>@vo.Note</td>
                    <td>@Html.ActionLink("删除", "Delete", "Role", new { id = vo.Rid }, new { })</td>
                    <td>@Html.ActionLink("修改", "Edit", "Role", new { id = vo.Rid }, new { target = "_blank" })</td>
                </tr>
                    }
                }   
            }
        </table>
    </div>
</div>
